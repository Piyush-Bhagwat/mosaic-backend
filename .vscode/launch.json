{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js",
            "runtimeArgs": [
                "--inspect",
                "--max-old-space-size=512"
            ],
            "console": "integratedTerminal"
        }
    ]
}